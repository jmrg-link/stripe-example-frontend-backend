{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "watch": ["src/**/*", ".env"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,env",
  "legacyWatch": true,
  "delay": "1500",
  "pollingInterval": 500
}